@model List<project1.ViewModels.EmployeeLeaveReportViewModel>

@{
    ViewData["Title"] = "Leave Report";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">
                <i class="fas fa-file-alt me-2"></i>Leave Report
            </h4>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Employee</th>
                        <th>Annual Leave Used</th>
                        <th>Annual Leave Remaining</th>
                        <th>Bonus Leave Used</th>
                        <th>Bonus Leave Remaining</th>
                        <th>Sick Leave</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.EmployeeName</td>
                            <td>@employee.AnnualLeaveUsed</td>
                            <td>@employee.AnnualLeaveRemaining</td>
                            <td>@employee.BonusLeaveUsed</td>
                            <td>@employee.BonusLeaveRemaining</td>
                            <td>@employee.SickLeaveUsed</td>

                        </tr>
                    }
                </tbody>
            </table>
            <a href="@Url.Action("ExportLeaveReportToExcel", "HR")" class="btn btn-success">
                <i class="fas fa-file-excel me-2"></i>Export to Excel
            </a>
        </div>
    </div>
</div>