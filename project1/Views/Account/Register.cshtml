@using project1.ViewModels;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_AccountLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    body {
        background-color: #f8f9fa; 
    }

    .account-box {
        background-color: #ffffff; 
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
    }

    .form-control-lg {
        border-radius: 8px;
        padding: 12px 16px;
    }

    .btn-register {
        background-color: #0d6efd; 
        border: none;
        border-radius: 8px;
        padding: 12px 0;
        font-size: 16px;
    }

        .btn-register:hover {
            background-color: #0b5ed7; 
        }

    .text-decoration-none {
        color: #0d6efd; 
    }

        .text-decoration-none:hover {
            text-decoration: underline;
        }
</style>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="account-box p-5 shadow-lg" style="max-width: 500px;">
        <div class="text-center mb-4">
            <i class="fas fa-user-plus fa-4x text-primary mb-3"></i> 
            <h2 class="text-primary">Register</h2>
            <p class="text-muted">Create a new account to get started.</p>
        </div>

        <!-- Register Form -->
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Full Name Input -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label">
                    <i class="fas fa-user me-2"></i>Full Name
                </label>
                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter your full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Email Input -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope me-2"></i>Email
                </label>
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password Input -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label">
                    <i class="fas fa-lock me-2"></i>Password
                </label>
                <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password Input -->
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">
                    <i class="fas fa-lock me-2"></i>Confirm Password
                </label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Register Button -->
            <button type="submit" class="btn btn-register w-100 text-white mb-3">
                <i class="fas fa-user-plus me-2"></i>Register
            </button>

            <!-- Login Link -->
            <p class="text-center mt-3">
                Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Login</a>
            </p>

            <!-- Back Link -->
            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Back to Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}